<Window x:Class="WpfApp17.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp17"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>


        <Label Content="Крестики нолики"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                FontSize="50" Height="76" Width="402"
               Grid.ColumnSpan="2"/>
        <Button x:Name="Start" Grid.Column="0" Grid.Row="1" Click="Start_Click"  Content="Start"/>
        <Button x:Name="ReStart"  Grid.Column="1"  Grid.Row="1" Content="Restart" Click="ReStart_Click"/>
    </Grid>
</Window>
